@page "/"

<input type="hidden" id="anPageName" name="page" value="1" />
<div class="container-center-horizontal">
    <div class="x1 screen">
        <div class="main">
            <div class="status-bar">
                <div class="time">9:41</div>
                <img class="cellular-connection"
                     src="https://anima-uploads.s3.amazonaws.com/projects/6272cf8446c456ec1d537bd9/releases/627bd23a24d4eb633991ccbd/img/cellular-connection@2x.svg" />
                <img class="wifi"
                     src="https://anima-uploads.s3.amazonaws.com/projects/6272cf8446c456ec1d537bd9/releases/627bd23a24d4eb633991ccbd/img/wifi@2x.svg" />
                <div class="battery">
                    <div class="overlap-group">
                        <div class="capacity"></div>
                    </div>
                    <img class="cap"
                         src="https://anima-uploads.s3.amazonaws.com/projects/6272cf8446c456ec1d537bd9/releases/627bd23a24d4eb633991ccbd/img/cap@2x.svg" />
                </div>
            </div>
            <div class="main-container">
                <div class="icon-container">
                    <div class="arrow-left">
                        <img class="shape-1"
                             src="https://anima-uploads.s3.amazonaws.com/projects/6272cf8446c456ec1d537bd9/releases/627bd23a24d4eb633991ccbd/img/shape@2x.svg" />
                    </div>
                    <div class="camera">
                        <img class="shape-2"
                             src="https://anima-uploads.s3.amazonaws.com/projects/6272cf8446c456ec1d537bd9/releases/627bd23a24d4eb633991ccbd/img/shape@2x.png" />
                    </div>
                </div>
                <div class="text-container">
                    <h1 class="header">Enter your phone number</h1>
                </div>
            </div>
        </div>
        <div class="main-1">
            <div class="main-container-1">
                <div class="russia">
                    <img class="shape"
                         src="https://anima-uploads.s3.amazonaws.com/projects/6272cf8446c456ec1d537bd9/releases/627bd23a24d4eb633991ccbd/img/shape-2@2x.svg" />
                    <div class="shape-3"></div>
                    <img class="shape"
                         src="https://anima-uploads.s3.amazonaws.com/projects/6272cf8446c456ec1d537bd9/releases/627bd23a24d4eb633991ccbd/img/shape-3@2x.svg" />
                </div>
                <div class="hello body1">@PhoneNumber</div>
                <div class="clear">
                    <img class="shape-4"
                        @onclick = "ClearPhoneNumber"
                         src="https://anima-uploads.s3.amazonaws.com/projects/6272cf8446c456ec1d537bd9/releases/627bd23a24d4eb633991ccbd/img/shape-4@2x.svg" />
                </div>
            </div>
        </div>
        <div class="primary"><div class="active body1">Continue</div></div>
        <div class="numeric">
            <div class="flex-row poppins-light-shark-29px">
                <div class="number-container">
                    <div class="number-2" @onclick="() => PressButton(1)">1</div>
                    <div class="number-3" @onclick="() => PressButton(4)">4</div>
                    <div class="number-4" @onclick="() => PressButton(7)">7</div>
                </div>
                <div class="flex-row-1">
                    <div class="number-container-1">
                        <div class="number-5" @onclick="() => PressButton(2)">2</div>
                        <div class="number" @onclick="() => PressButton(5)">5</div>
                        <div class="number-6" @onclick="() => PressButton(8)">8</div>
                        <div class="number" @onclick="() => PressButton(0)">0</div>
                    </div>
                    <div class="flex-col">
                        <div class="number-7" @onclick="() => PressButton(3)">3</div>
                        <div class="number-1" @onclick="() => PressButton(6)">6</div>
                        <div class="number-1" @onclick="() => PressButton(9)">9</div>
                        <div class="erase">
                            <img class="shape-5"
                                @onclick = "PressErase"
                                 src="https://anima-uploads.s3.amazonaws.com/projects/6272cf8446c456ec1d537bd9/releases/627bd23a24d4eb633991ccbd/img/shape-5@2x.svg" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="home-indicator">
                <div class="shape-6"></div>
            </div>
        </div>
    </div>
</div>
@code 
{
    string PhoneNumber { get; set; } = "";

    void PressButton(int Number)
    {
        PhoneNumber += Number.ToString();
    }

    void PressErase()
    {
        PhoneNumber = PhoneNumber.Substring(0, PhoneNumber.Length - 1);
    }

    void ClearPhoneNumber()
    {
        PhoneNumber = "";
    }
}